<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form action="/yourinfo/update-email/verify-password" method="post">
        <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
            <h1 class="govuk-fieldset__heading">
            Please Verify Your Password
            </h1>
        </legend>
        <div class="govuk-form-group">
            <label class="govuk-label" for="password">
                Password
            </label>
            <span id="password-hint" class="govuk-hint">
                Please enter your password to confirm the change to your account.
            </span>
            <input type="password" class="govuk-input" id="password"
            name="password" type="text">
             <input type="hidden" class="govuk-input" id="email"
            name="email" value="{{email}}">
        </div>
        <div class="govuk-form-group">
            <button class="govuk-button" >
            Continue
            </button>
        </div>
        {{#if err}}
        <span id="authentication-error" class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span> {{err}}
        </span>
        {{/if}}
        </div>
        </fieldset>
        </form>
    </div>
</div>